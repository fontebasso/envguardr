{
  "name": "envguardr",
  "description": "A CLI tool to validate environment variables against a schema.",
  "keywords": [
    "cli",
    "typescript",
    "env",
    "environment",
    "schema",
    "validation"
  ],
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "author": "Samuel Fontebasso",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "format": "prettier --write ./src ./tests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "tsx bin/cli.ts validate ./tests/fixtures/env.schema.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "bin": {
    "envguardr": "./dist/bin/cli.js"
  },
  "files": [
    "dist/"
  ],
  "directories": {
    "test": "tests"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "dependencies": {
    "valitype": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "tsx": "4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
